# Database
DATABASE_URL=postgresql://user:password@localhost:5432/analytics_platform
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/analytics_platform_test

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3 Compatible Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# OpenAI API (for NLP features)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API (for ML models)
HUGGING_FACE_API_KEY=your-hugging-face-api-key-here

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# File Upload Limits
MAX_FILE_SIZE_MB=2048
MAX_FILES_PER_UPLOAD=10